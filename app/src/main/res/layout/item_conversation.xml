<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_perm_identity_black_24dp"
            android:id="@+id/imgPersonB"
            tools:ignore="ContentDescription,VectorDrawableCompat"

            android:layout_gravity="center|left" />

        <TextView
            android:text="fdfdfdffffffffffffffffffffffffffffffffffffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPersonA"
            android:layout_weight="1"
            android:textSize="18dp"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage" />


        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_mic_none_black_24dp"
                android:id="@+id/imgListenSentenceA"
                tools:ignore="ContentDescription"
                android:layout_gravity="center|right"
                android:background="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_person_outline_black_24dp"
            android:id="@+id/imgPersonA"
            android:contentDescription=""
            android:layout_gravity="center|left"
            tools:ignore="ContentDescription" />
        <TextView
            android:text="ggsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtPersonB"
            android:layout_weight="1"
            android:textSize="18dp"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_mic_none_black_24dp"
                android:id="@+id/imgListenSentenceB"
                tools:ignore="ContentDescription"
                android:layout_gravity="center|right"
                android:background="@android:color/transparent" />

    </LinearLayout>



</LinearLayout>
