<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_person_girl_24dp"
            android:id="@+id/imgPersonB"
            tools:ignore="ContentDescription,VectorDrawableCompat"

            android:layout_gravity="center|left" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="fdfdfdffffffffffffffffffffffffffffffffffffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPersonA"
            android:layout_weight="1"
            android:textSize="18dp"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_person_boy_24dp"
            android:id="@+id/imgPersonA"
            android:contentDescription=""
            android:layout_gravity="center|left"
            tools:ignore="ContentDescription,VectorDrawableCompat" />
        <TextView
            android:layout_marginLeft="10dp"
            android:text="ggsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtPersonB"
            android:layout_weight="1"
            android:textSize="18dp"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage" />


    </LinearLayout>



</LinearLayout>
